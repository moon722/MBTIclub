<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostResister"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/post_register_back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="#FFFFFF"
            />

        <TextView
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/mbti_edge"

            android:ems="10"
            android:focusable="false"
            android:gravity="center"
            android:text="글쓰기"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <EditText
        android:id="@+id/post_register_title"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:hint="제목" />

    <EditText
        android:id="@+id/post_register_content"
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:hint="내용" />

    <Button
        android:id="@+id/post_register_button"
        android:layout_width="399dp"
        android:layout_height="match_parent"
        android:background="#000000" />

</LinearLayout>