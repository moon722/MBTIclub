<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/post_back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="#FFFFFF"
            />

        <TextView
            android:id="@+id/edit_post_BoardName"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:background="@drawable/mbti_edge"

            android:ems="10"
            android:focusable="false"
            android:gravity="center"
            android:text="전체게시판"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/post_add_button"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:src="@drawable/ic_baseline_post_add_24" />




    </LinearLayout>

    <EditText
        android:id="@+id/post_textSearch"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:hint="Search" />
    <ListView
        android:id="@+id/post_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>



</LinearLayout>

