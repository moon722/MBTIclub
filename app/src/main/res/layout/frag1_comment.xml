<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#EFEFEF"
            android:src="@drawable/btn_back"
            android:stateListAnimator="@null"
            android:layout_margin="5dp"
            android:id="@+id/CommentBackBtn">
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Discussion Theme"
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_weight="2">

        </TextView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/commentImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:weightSum="6">

                <TextView
                    android:id="@+id/comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="write comment!"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:padding="5dp">
                </TextView>
                <com.baoyz.widget.PullRefreshLayout
                    android:id="@+id/Refresh_comment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/comment_List">

                </ListView>
                </com.baoyz.widget.PullRefreshLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_weight="1"
                    android:layout_margin="5dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/comment_Edt"
                    android:layout_weight="6"
                    android:hint="write commment">

                </EditText>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/comment_Ibtn"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher_send_round"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:padding="5dp">

                </ImageButton>
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>